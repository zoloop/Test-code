import java.util.Timer;import java.util.TimerTask;public class HomeAutomation {    private Timer timer;    private boolean isRunning;    public HomeAutomation() {        timer = new Timer();        isRunning = false;    }    public void startAutomation() {        timer.schedule(new TimerTask() {            @Override            public void run() {                // 开启灯光系统                System.out.println("开启灯光系统...");                // 开启窗帘                System.out.println("开启窗帘...");                // 开启电视                System.out.println("开启电视...");                // 关闭家庭摄像头                System.out.println("关闭家庭摄像头...");                // 开启空调                System.out.println("开启空调...");                isRunning = true;            }        }, 0, 1000); // 每隔1秒钟执行一次任务    }    public void stopAutomation() {        isRunning = false;        timer.cancel();    }    public static void main(String[] args) {        HomeAutomation homeAutomation = new HomeAutomation();        homeAutoma
